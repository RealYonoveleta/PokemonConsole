<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<!-- Console Appender with color support -->
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>
%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5level) [%thread] %logger{36} 
	%highlight(%m)
	%n
			</pattern>
		</encoder>
	</appender>

	<root level="debug">
		<appender-ref ref="CONSOLE" />
	</root>

</configuration>
